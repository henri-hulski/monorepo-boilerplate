{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "jsx": "react",
    "rootDir": "src",
    "lib": ["es6", "es7", "esnext", "dom"],
    "declaration": true,
    "esModuleInterop": true,
    "inlineSources": true,
    "keyofStringsOnly": true,
    "newLine": "LF",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "pretty": true,
    "sourceMap": true,
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/**/*.test.ts"]
}
